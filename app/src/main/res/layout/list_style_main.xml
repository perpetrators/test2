<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/ic_stroke_top_bott"
    android:gravity="center"
    >
    <ImageView
        android:id="@+id/list_item_butt_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:padding="5dp"
        android:background="@drawable/ic_fillet_square_main"
        android:src="@mipmap/pic"/>
    <TextView
        android:id="@+id/list_item_title"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/list_item_butt_del"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:padding="5dp"
        android:background="@drawable/ic_fillet_square_main"
        android:src="@mipmap/close"/>
    <ImageView
        android:id="@+id/list_item_butt_redact"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:padding="5dp"
        android:background="@drawable/ic_fillet_square_main"
        android:src="@mipmap/edit_blue"/>
</LinearLayout>
